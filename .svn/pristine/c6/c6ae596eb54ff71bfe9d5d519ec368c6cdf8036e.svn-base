/* ============================================================================================ */
function f_submit() {

	if($('#frmCouponZine').formValid()) {

		// ---------------- 조건부 벨리데이션 검사 영역 시작 ---------------- //
		if($("#groupbuy_campaign_id").text().length == "0"){
