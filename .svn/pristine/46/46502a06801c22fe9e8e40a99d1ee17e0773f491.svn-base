var pagefunction = function() {
	
	// 버튼 권한별 설정
	if('${sessionScope.menuAuth.U}' != 'Y') {
		$('.btn_auth_update').remove();
	}
	if('${sessionScope.menuAuth.D}' != 'Y') {
		$('.btn_auth_delete').remove();
	}
	if('${sessionScope.menuAuth.A}' != 'Y') {
		$('.btn_auth_approve').remove();
	}
	
	// 쿠폰진 컨텐츠 상세 데이터 추출
	f_paymentRealDetail();
};




/**
