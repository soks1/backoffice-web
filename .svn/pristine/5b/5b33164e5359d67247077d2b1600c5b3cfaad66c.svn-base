/* ==================================================================================
/* 상세 화면 : 쿠폰북 상세 다이얼로그 호출
/* ================================================================================== */
function f_openCouponBookRD(id) {
	$.ajax({
		url: '/application/coupon/campaign/couponBookRD.do',
		type: 'GET',
		async: false,
		cache: true,
		data: {cpbook_id:id},
		success: function(data) {
			var $target = $('#coupon_book_rd');
			$target.empty();
			$target.html(data);
		},
		complete: function() {
			$('#coupon_book_rd').dialog('open');
		}
	});
}

