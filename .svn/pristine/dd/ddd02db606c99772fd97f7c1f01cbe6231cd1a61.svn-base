 * 달력 : 종료일이 시작일을 넘길 수 없도록 셋팅
 * ==================================================================================
 */
$('#ntce_start_dd').datepicker(
    $.extend({
        onSelect: function(selected) {
            $('#ntce_end_dd').datepicker('option','minDate', selected);
        }
    }, date_opts)
);
$('#ntce_end_dd').datepicker(
    $.extend({
        onSelect: function(selected) {
            $('#ntce_start_dd').datepicker('option','maxDate', selected);
        }
    }, date_opts)
);

/**
 * ==================================================================================
 * 달력 : 현재날짜 시간/분
 * ==================================================================================
 */
function cf_toHoursMins() {
	var to = new Date();
	var hour = to.getHours();
	var min = to.getMinutes();
		
	if(parseInt(hour) < 10) {
		hour = '0'+parseInt(hour);
	}
	if(parseInt(min) < 10) {
		min = '0'+parseInt(min);
	}
	return hour + '-' + min;
}

/* ============================================================================================
/* 연결 방법에 따른 URL 
/* --------------------------------------------------------------------------------------------
/* radio 선택에 따른 visible 변경
/* ============================================================================================ */
function f_applyType(link) {
	
	if(link == 'APPLIST') {
		$('#linkUrlA').show();
		$('#linkUrlB').hide();
	}else if (link == 'URL'){
		$('#linkUrlB').show();
		$('#linkUrlA').hide();
	}else if (link == 'USELESS'){
		$('#linkUrlB').hide();
		$('#linkUrlA').hide();
	}
}

