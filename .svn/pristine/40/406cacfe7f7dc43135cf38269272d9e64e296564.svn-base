/**
 * ==================================================================================
 * 공통 : 다이얼로그  TITLE 영역 CSS 변경
 * ==================================================================================
 */
$.widget("ui.dialog", $.extend({}, $.ui.dialog.prototype, {
	_title : function(title) {
		if (!this.options.title) {
			title.html("&#160;");
		} else {
			title.html(this.options.title);
		}
	}
}));

/**
 * ==================================================================================
 * 공통 : 선물관리 리스트 화면 가기
 * ==================================================================================
 */
function f_giftList() {
	var url = "/application/gift/giftLN.do";
	var method = "POST";
	cf_action(url, method, $("#frmKeepData").serialize());
}

/**
 * ==================================================================================
 * 공통 : 선물관리 상세 화면 가기
 * ==================================================================================
 */
function f_giftShow() {
	var url = "/application/gift/giftRN.do";
	var method = "POST";
	cf_action(url, method, $("#frmKeepData").serialize());
}

/**
 * ==================================================================================
 * 선물관리 리스트 화면 : 검색 이벤트
 * ==================================================================================
 */
function f_search() {
	
	// ------------------ 검색 벨리데이트 시작 ------------------ //
	
	if($("#frmSearch").searchValid() != true) {
		alert("검색 조건을 입력해 주세요.");
		return;
	}
	
	// ------------------ 검색 벨리데이트 종료 ------------------ //
	
	// 초기화 버튼 추가
	f_addButton();
	
	// 검색 폼 데이터 추출
	var searchData = $("#frmSearch").serializeFormObject();
	
	// 검색 사용 중으로 변경
	$("#gift_grid").jqGrid('setGridParam', {search: true});
	
	// 첫 페이지 셋팅
	$("#gift_grid").jqGrid('setGridParam', {page: 1});
	
	// setGridParam을 이용해서 postData에 새로 설정해준 postData의 search에 설정 후 그리드를 다시 불러온다.
	$("#gift_grid").jqGrid('setGridParam', {'postData' : {'search_info':searchData} }).trigger('reloadGrid');
}


/**
 * ==================================================================================
 * 선물관리 리스트 화면 : 검색 초기화 버튼 추가
 * ==================================================================================
 */
function f_addButton() {
	// 중복 취소 버튼 생성을 막기위한 기존 버튼 삭제
	$("#btn_cancel").remove();
	$("#btn_search").parent().append("<a href=\"javascript:void(0)\" id=\"btn_cancel\" onclick=\"f_cancel();\" class=\"btn btn-warning\"><i class=\"fa fa-remove\"></i> 초기화 </a>");
}


/**
 * ==================================================================================
 * 선물관리 리스트 화면 : 검색 초기화 이벤트
 * ==================================================================================
 */
function f_cancel() {
	// KeepData 폼 안에 input 태그 삭제
	$("#frmKeepData").empty();
	// 검색 초기화 버튼 삭제
	$("#btn_cancel").remove();
	$("#gift_grid").jqGrid('setGridParam', {search: false});
	$("#gift_grid").jqGrid('setGridParam', {page: 1});
	// 검색 데이터 초기화 후 그리드 리로드
	$("#gift_grid").jqGrid('setGridParam', {'postData' : {'search_info':''} }).trigger('reloadGrid');
	// 검색 폼의 항목들 초기화
	$("#frmSearch").cleanObject();
}






