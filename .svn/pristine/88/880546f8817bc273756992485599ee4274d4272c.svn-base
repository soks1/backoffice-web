};

/**
 * ==================================================================================
 * 상세 : 시간연장 다이얼로그 화면 구문
 * ==================================================================================
 */
 $('#closing_date_rd').dialog({
	autoOpen : false,
	width : 400,
	minHeight: 300,
	resizable : false,
	modal : true,
	title : "<div class='widget-header'><h6><i class='fa fa-pencil-square-o'></i> 적용 종료일 변경 </h6></div>",
	buttons : [{
		html : "취소",
		"class" : "btn btn-default",
		click : function() {
			$(this).dialog("close");
			$('#closing_date_rd').empty();
		}
	},{
		html : "저장",
		"class" : "btn btn-primary",
		click : function() {
			var chg_data = $("#frmCloseDate").serializeFormObject();
			chg_data.nomem_evnt_id = $("#evnt_id").val();
			console.log(JSON.stringify(chg_data));
				
			if( $('#frmCloseDate').formValid() ) {
				$.ajax({
					url: api_url + "/backoffice/nomember/finish",
					type: "POST",
					contentType: "application/json;charset=utf-8", // POST 일때만 사용
					async: false,
					cache: true,
					data: JSON.stringify(chg_data),
					success: function(resultData) {
						alert(resultData["message"]);
						var url = '/application/coupon/nomem/nomemCouponBookRN.do';
						var method = "POST";
						cf_action(url, method, $("#frmKeepData").serialize());
					//	f_joinList();
					},
