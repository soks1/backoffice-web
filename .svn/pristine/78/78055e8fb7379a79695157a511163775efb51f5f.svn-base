<script type="text/javascript">

$('#selected_dy').datepicker(
	    $.extend({
	    	minDate:$('input[name=login_vali_end_dy]').val(),
	    }, date_opts)
);

var dialog_pagefunction = function(){
};

/* ============================================================================================
/* 벨리데이션 체크 및 폼 전송
/* --------------------------------------------------------------------------------------------
/* 벨리데이션 체크 
/* 	- true	: 폼전송
/* 	- false : 알림창 경고
/* ============================================================================================ */
function f_extension_validity_submit() {

	if($('#selected_dy').val() != ""){
		var _data = $('#frmLifekokDate').serializeFormObject();
		var data = {
			login_vali_end_dy : _data.selected_dy,
			tenant_cd :$('input[name=tenant_cd]').val(),
			empno	  : '${sessionScope.sessionEmpno}'
		};
		
		if(confirm("적용 시 app에 즉시 반영됩니다. 유효기간을 연장 하시겠습니까?")){
			
			$.ajax({
			    url: api_lifekok_url+'/backoffice/lifekok/tenant/pwextension',
// 			    url: api_lifekok_img_url+'/backoffice/lifekok/tenant/pwextension',
			    type: 'POST',
			    async: true,
			    cache: false,
			    datatype: 'json',
			    contentType: 'application/json;charset=utf-8',
			    data: JSON.stringify(data),
			    success: function(obj){
			    	alert(obj.message);
					$('#extension_validity').dialog("close");
					var url = "/application/cooperateService/tenant/tenantRN.do";
			    	var method = "GET";
			    	var postData ={
			    			tenant_cd : $("input[name=tenant_cd]").val(),
			    			empno	  : '${sessionScope.sessionEmpno}'
			    	}; 
			    	cf_action(url, method, postData);
			    },
			    error: function(obj) {
			    	var serverObj = obj.responseJSON;
			    	alert('code:'+serverObj.code+'\n'+'message:'+cf_msg(serverObj.message)+'\n');
			    	return;
			    }
			});	
		}
	} else {
		alert("새로운 유효기간을 선택해 주세요");
		return;
	}
}

function f_extension_validity_cancel(){
	$('#extension_validity').dialog("close");
}

